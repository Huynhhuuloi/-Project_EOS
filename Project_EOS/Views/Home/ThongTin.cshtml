@model Project_EOS.Models.Entities.Client
@{
    ViewBag.Title = "ThongTin";
    Layout = "~/Views/Shared/_Layout_Project.cshtml";
}

<style>
    .card-header {
        background-color: #333; /* Màu đen nhẹ cho background */
        color: #fff; /* Màu trắng cho chữ trên header */
        font-weight: bold; /* In đậm chữ */
        border-bottom: none; /* Loại bỏ đường viền dưới cùng */
    }

        .card-header h2 {
            color: white;
        }

    .card {
        background-color: #222; /* Màu đen cho card */
        color: #fff; /* Màu trắng cho nội dung card */
        border: none; /* Loại bỏ đường viền */
        border-radius: 10px; /* Bo góc */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Đổ bóng */
        transition: transform 0.3s ease; /* Hiệu ứng chuyển động mềm mại */
    }

        .card:hover {
            transform: translateY(-5px); /* Di chuyển lên trên khi di chuột qua */
        }

    .btn-edit {
        background-color: #007bff; /* Màu xanh dương cho nút chỉnh sửa */
        color: #fff; /* Màu trắng cho chữ trên nút */
        border: none; /* Loại bỏ đường viền */
        border-radius: 20px; /* Bo góc */
        padding: 8px 20px; /* Khoảng cách giữa nút và chữ */
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển đổi màu */
    }

        .btn-edit:hover {
            background-color: #0056b3; /* Màu xanh dương sáng khi di chuột qua */
        }

    .form-control {
        background-color: #333; /* Màu đen nhẹ cho ô input */
        color: #000; /* Màu đen cho chữ trong ô input khi không hover */
        border: none; /* Loại bỏ đường viền */
        border-radius: 5px; /* Bo góc */
        transition: color 0.3s ease; /* Hiệu ứng chuyển đổi màu */
    }

        .form-control:hover {
            color: #fff; /* Màu trắng cho chữ trong ô input khi hover */
        }

        .form-control:focus {
            background-color: #444; /* Màu đen nhạt khi ô input được focus */
            color: #fff; /* Màu trắng cho chữ trong ô input khi focus */
        }


        .form-control:focus {
            background-color: #444; /* Màu đen nhạt khi ô input được focus */
            color: #fff; /* Màu trắng cho chữ trong ô input */
        }

    .custom-label {
        font-weight: bold; /* In đậm chữ */
    }
</style>

<div class="container mt-5" style="padding-top:50px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0 text-center">Thông Tin Cá Nhân</h2>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Update", "Home")" method="post">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">STT:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.ClientID" readonly id="ClientID" name="ClientID">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Họ và Tên:</label>
                            <div class="col-sm-8">
                                <input type="text" id="ClientName" name="ClientName" class="form-control" value="@Model.ClientName">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Company Name:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="CompanyName" name="CompanyName" value="@Model.CompanyName">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Contact Person:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="ContactPerson" name="ContactPerson" value="@Model.ContactPerson">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Contact Nmuber:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="ContactNumber" name="ContactNumber" value="@Model.ContactNumber">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Email:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email">
                            </div>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">Address:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label">UserName:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" value="@Model.Username" readonly>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label custom-label ">Password:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control form-style" value="@Model.Password" readonly>
                            </div>
                        </div>
                        <button type="submit"> Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a href="@Url.Action("EditTT", new { id = Model.ClientID })" class="btn btn-edit" style="width: 120px;">Change Password</a>
</div>

